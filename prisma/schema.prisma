generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Events {
    id            String   @id @default(cuid())
    name          String
    description   String
    organization  String
    headerImage   String
    location      String
    createdAt     DateTime @default(now())
    eventStart    DateTime
    eventEnd      DateTime
    formOpen      DateTime
    formClose     DateTime
    hasBeenForced Boolean  @default(false)
    forcedIsOpen  Boolean  @default(false)
    pageID        String   @unique @default("")
}

model Checkins {
    id         String  @id @default(cuid())
    member     Member  @relation(fields: [memberID], references: [id])
    memberID   String
    isInPerson Boolean
    feedback   String
}

model Member {
    id               String     @id @default(cuid())
    email            String     @unique
    shortID          String     @unique
    attendanceCount  Int
    joinDate         DateTime
    checkins         Checkins[]
    extendedUserData String
}

